---
interface Props {
	title: string;
	titleLine2?: string;
	description: string;
	bgColor: string;
	highlightColor: string;
	textColor?: string;
	image?: string;
}

const {
	title,
	titleLine2,
	description,
	bgColor,
	highlightColor,
	textColor = '#000',
	image
} = Astro.props;
---

<div
	class="positivus-card"
	style={`background-color: ${bgColor}; color: ${textColor};`}
>
	<!-- Left: Text Content -->
	<div class="positivus-card__content">
		<div>
			<h3 class="positivus-card__title">
				<span class="positivus-card__highlight" style={`background-color: ${highlightColor};`}>
					{title}
				</span>
				{titleLine2 && (
					<>
						<br />
						<span class="positivus-card__highlight" style={`background-color: ${highlightColor};`}>
							{titleLine2}
						</span>
					</>
				)}
			</h3>
		</div>

		<div class="positivus-card__cta">
			<div class="positivus-card__arrow">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M7 17L17 7M17 7H7M17 7V17"/>
				</svg>
			</div>
			<span class="positivus-card__learn-more">Learn more</span>
		</div>
	</div>

	<!-- Right: Image (if provided) -->
	{image && (
		<div class="positivus-card__image">
			<img src={image} alt={title} />
		</div>
	)}
</div>

<style>
	/* POSITIVUS CARD STRUCTURE - EXACTLY LIKE THE TEMPLATE */
	.positivus-card {
		/* Key Positivus visual: THICK BLACK BORDER */
		border: 1px solid #000;
		border-bottom: 5px solid #000; /* Thick bottom border */

		/* Key Positivus visual: VERY ROUNDED CORNERS */
		border-radius: 24px;

		/* Key Positivus visual: SUBTLE SHADOW */
		box-shadow: 0 1px 0 0 #000;

		padding: 3rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
		min-height: 310px;
		position: relative;
		transition: transform 0.3s ease;
	}

	.positivus-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 6px 0 0 #000;
	}

	.positivus-card__content {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		flex: 1;
		gap: 2rem;
		max-width: 60%;
	}

	.positivus-card__title {
		font-family: var(--theme-font-family-heading);
		font-size: 1.625rem;
		font-weight: 500;
		line-height: 1.3;
		margin: 0;
	}

	/* Key Positivus visual: HIGHLIGHTED TEXT BACKGROUNDS */
	.positivus-card__highlight {
		padding: 0 0.25rem;
		line-height: 1.4;
	}

	.positivus-card__cta {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	/* Key Positivus visual: CIRCULAR BLACK ARROW BUTTON */
	.positivus-card__arrow {
		background: #000;
		border-radius: 50%;
		width: 41px;
		height: 41px;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
		transition: transform 0.3s ease;
	}

	.positivus-card__arrow svg {
		color: #fff;
	}

	.positivus-card:hover .positivus-card__arrow {
		transform: rotate(45deg);
	}

	.positivus-card__learn-more {
		font-size: 1.25rem;
		font-weight: 400;
	}

	.positivus-card__image {
		flex-shrink: 0;
		display: flex;
		align-items: center;
	}

	.positivus-card__image img {
		width: 140px;
		height: 140px;
		object-fit: cover;
		border-radius: 12px;
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.positivus-card {
			flex-direction: column;
			padding: 2rem;
			min-height: auto;
		}

		.positivus-card__content {
			max-width: 100%;
		}

		.positivus-card__image img {
			width: 120px;
			height: 120px;
		}
	}
</style>
