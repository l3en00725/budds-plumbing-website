---
import { Icon } from 'astro-icon/components';
import { Container, Button } from '@components/odyssey-theme';
import settings from '../../../config/settings.js';
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
				<h1>
					Cape May County's
					<span class="neon-highlight">Trusted</span>
					Plumbing & HVAC Experts
				</h1>
				<p class="hero-description">
					24/7 emergency repairs, expert installations, and reliable maintenance for your home or business.
					Licensed, insured, and locally owned since day one.
				</p>

				<!-- Neon Blue CTAs -->
				<div class="hero-btns__container">
					<a href="tel:+16094653759" class="btn-neon">
						<Icon name="ic:baseline-phone" />
						Call (609) 465-3759
					</a>
					<a href="/company/contact" class="btn-outline">
						Get Free Quote
					</a>
				</div>

				<!-- Trust Badges -->
				<div class="hero-badges">
					<img src="/assets/budds/sjg-contractor-badge.avif" alt="South Jersey Gas Participating Contractor" class="trust-badge" />
					<div class="trust-text">
						<p class="badge-label">SJG Participating Contractor</p>
						<p class="badge-detail">Master Plumber License #13160</p>
						<p class="badge-financing">0% Financing Available</p>
					</div>
				</div>

				<div class="service-areas">
					<p>Serving Cape May Court House, Ocean City, Wildwood, Avalon & all of Cape May County</p>
				</div>
		</div>
		<div class="hero-section__image">
				<picture>
					<img
						src="/assets/images/home/plumbing-hero.jpg"
						alt="Professional plumbing and HVAC services in Cape May County"
						id="home-hero-image"
					/>
				</picture>
		</div>
	</section>
</Container>

<style>
	/* Positivus-Style Hero Layout */
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 4rem;
		padding: 2rem 0;
	}

	.hero-section__text {
		justify-self: center;
		max-width: 36rem;
	}

	.hero-section__text h1 {
		font-family: var(--theme-font-family-heading);
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 700;
		letter-spacing: -0.03em;
		line-height: 1.05;
		margin-bottom: 1.5rem;
		color: var(--theme-on-bg);
	}

	/* Neon Blue Highlight */
	.neon-highlight {
		color: var(--theme-accent);
		position: relative;
		display: inline-block;
	}

	.hero-description {
		font-size: clamp(1.125rem, 2vw, 1.375rem);
		line-height: 1.65;
		margin-bottom: 2.5rem;
		color: #666;
	}

	/* Neon Blue Primary CTA */
	.btn-neon {
		background: var(--theme-accent);
		color: #000;
		padding: 1.125rem 2.5rem;
		border-radius: 50px;
		font-weight: 700;
		font-size: 1.125rem;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		box-shadow: 0 4px 20px var(--theme-accent-glow);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: none;
	}

	.btn-neon:hover {
		background: var(--theme-accent-hover);
		transform: translateY(-2px);
		box-shadow: 0 8px 30px var(--theme-accent-glow);
	}

	.btn-neon :global(svg) {
		width: 24px;
		height: 24px;
	}

	/* Black Outline Secondary CTA */
	.btn-outline {
		background: transparent;
		color: var(--theme-on-bg);
		padding: 1.125rem 2.5rem;
		border: 2px solid var(--theme-on-bg);
		border-radius: 50px;
		font-weight: 700;
		font-size: 1.125rem;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.btn-outline:hover {
		background: var(--theme-on-bg);
		color: var(--theme-bg);
		transform: translateY(-2px);
	}

	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	/* Trust Badges Section */
	.hero-badges {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
		padding: 1.25rem;
		background: var(--theme-surface-1);
		border-radius: 16px;
		border-left: 4px solid var(--theme-accent);
	}

	.trust-badge {
		width: 70px;
		height: auto;
		flex-shrink: 0;
	}

	.trust-text {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.badge-label {
		font-weight: 700;
		font-size: 0.95rem;
		margin: 0;
		color: var(--theme-on-bg);
	}

	.badge-detail {
		font-size: 0.85rem;
		margin: 0;
		color: #666;
	}

	.badge-financing {
		font-size: 0.85rem;
		margin: 0;
		color: var(--theme-accent);
		font-weight: 600;
	}

	/* Hero Image */
	.hero-section__image {
		display: flex;
		justify-content: center;
	}

	.hero-section__image img {
		width: 100%;
		height: auto;
		max-height: 600px;
		object-fit: cover;
		border-radius: 24px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
	}

	/* Service Areas */
	.service-areas {
		opacity: 0.7;
		font-size: 0.875rem;
	}

	.service-areas p {
		margin: 0;
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.hero-btns__container {
			flex-direction: column;
			width: 100%;
		}

		.btn-neon,
		.btn-outline {
			width: 100%;
		}

		.hero-badges {
			flex-direction: row;
			align-items: center;
		}

		.trust-badge {
			width: 60px;
		}
	}
</style>